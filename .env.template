# ===== アプリケーション設定 =====
# Whisperモデル設定
MODEL_ID=base
COMPUTE_TYPE=int8
DEFAULT_LANGUAGE=ja
DEFAULT_TASK=transcribe
MAX_WORKERS=2

# ===== Docker Compose 設定 =====
# ポート設定
HOST_PORT=7860
NGINX_PORT=80
NGINX_SSL_PORT=443
PROMETHEUS_PORT=9090

# リソース制限
MEMORY_LIMIT=4G
CPU_LIMIT=2.0
MEMORY_RESERVATION=1G
CPU_RESERVATION=0.5

# タイムゾーン
TIMEZONE=Asia/Tokyo

# ===== セキュリティ設定 =====
# SSL証明書パス（本番環境用）
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# ===== ログ設定 =====
# ログレベル: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== 監視設定 =====
# 監視機能を有効にする場合はtrueに設定
ENABLE_MONITORING=false
ENABLE_LOGGING=false

# ===== 開発設定 =====
# 開発モード（デバッグ情報の表示など）
DEBUG_MODE=false

# ホットリロード（開発時のみ）
RELOAD=false

# ===== ファイル設定 =====
# アップロードファイルの最大サイズ（バイト）
MAX_FILE_SIZE=524288000  # 500MB

# ファイル保持期間（時間）
FILE_RETENTION_HOURS=24

# ===== パフォーマンス設定 =====
# 同時処理可能なアップロード数
MAX_CONCURRENT_UPLOADS=5

# バックグラウンドタスクのワーカー数
BACKGROUND_WORKERS=2

